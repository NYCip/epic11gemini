# EPIC V11 Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=epic_v11
POSTGRES_USER=epic_admin
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration  
REDIS_PASSWORD=your_secure_redis_password

# Authentication
JWT_SECRET=your_very_long_and_secure_jwt_secret_at_least_32_characters
NEXTAUTH_URL=https://epic.pos.com
NEXTAUTH_SECRET=your_nextauth_secret

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# Langfuse Monitoring
LANGFUSE_SECRET=your_langfuse_secret
LANGFUSE_SALT=your_langfuse_salt
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key

# PhiData
PHI_API_KEY=your_phi_api_key
PHI_DEBUG=false

# n8n Workflow Engine
N8N_USER=admin
N8N_PASSWORD=your_n8n_password

# Frontend
NEXT_PUBLIC_API_URL=https://epic.pos.com

# Environment
NODE_ENV=production
ENVIRONMENT=production